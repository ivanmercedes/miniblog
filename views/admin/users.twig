{% extends "layout.twig" %}

{% block content %}
     <h2>Users</h2>
    <a href="{{'admin/users/create' | url }}">Add user</a>

        <table class="table">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Delete</th>
            </tr>
        {% for use in users %}
        <tr>
            <td>
                {{ use.name }}
            </td>
            <td>
                {{ use.email }}
            </td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
        {% endfor %}           
    </table>
{% endblock %}