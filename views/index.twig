
{% extends "layout.twig" %}

{% block content %}
    {% for post in blogpost %}
        <div class="blog-post">
            <h2>{{ post.title }}</h2>
            <p>Jan 1, 2020 by <a href="">Jose</a> </p>
            {% if post.img_url %}
            <div class="blog-post-image">
                <img class="img-fluid" src="{{post.img_url}}" alt="">
            </div>
            {% endif %}
            <div class="blog-post-content">
                <p>{{ post.content }}</p>
            </div>
        </div>
    {% endfor %}
    
{% endblock %}
